{
    "app-id" : "org.gnome.Retro.UnitTests",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "retro-unit-tests",
    "tags" : [
        "devel",
        "development",
        "nightly"
    ],
    "desktop-file-name-suffix" : " (Development)",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "build-options" : {
        "cflags" : "-O2 -g",
        "cxxflags" : "-O2 -g",
        "env" : {
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/dbus-1",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules" : [
        {
            "name" : "wayland",
            "buildsystem" : "autotools",
            "builddir" : true,
            "config-opts" : [
                "--disable-documentation"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/wayland-project/wayland.git"
                }
            ]
        },
        {
            "name": "graphene",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "--libdir=/app/lib",
                "-Dtests=false",
                "-Dbenchmarks=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ebassi/graphene.git"
                }
            ]
        },
        {
            "name" : "gtk+",
            "buildsystem" : "meson",
            "config-opts" : [
                "--libdir=/app/lib",
                "-Ddemos=false",
                "-Dbuild-tests=false"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gtk+/3.94/gtk+-3.94.0.tar.xz",
                    "sha256" : "a947caa5296610b0f1d7a03b58df34765c227c577c78e683e75eea3251a67035"
                }
            ]
        },
        "libretro-cores/libretro-samples.json",
        "tests/test-data.json",
        {
            "name" : "retro-unit-tests",
            "buildsystem" : "simple",
            "build-commands" : [
                "mkdir -p /app/bin/",
                "install -m755 -pD retro-unit-tests /app/bin/retro-unit-tests",
                "install -m755 -pD org.gnome.Retro.UnitTests.desktop /app/share/applications/org.gnome.Retro.UnitTests.desktop"
            ],
            "sources" : [
                {
                    "type" : "script",
                    "commands" : [
                        "PATH=$PATH:/app/libexec/installed-tests/retro-gtk-0.14/",
                        "RETURN=0",
                        "retro_test()",
                        "{",
                        "  $@",
                        "  if [ $? -ne '0' ]; then RETURN=1; fi",
                        "}",
                        "retro_reftest_expect()",
                        "{",
                        "  TEST=\"$1\"",
                        "  if test \"$2\"; then EXPECTED=\"$2\"; else EXPECTED=\"$1\".expected; fi",
                        "  shift; shift;",
                        "  # Run the tests | Append a new line if needed | Compare with the expected results.",
                        "  retro-reftest \"$TEST\" 2>&1 | sed -e '$a\\' | diff -u \"$EXPECTED\" -",
                        "}",
                        "retro_reftest_test()",
                        "{",
                        "  RESULT=$(mktemp /tmp/retro_reftest.XXXXXX)",
                        "  for TEST in $@; do",
                        "    retro_reftest_expect \"$TEST\" > \"$RESULT\"",
                        "    if test -s \"$RESULT\"; then",
                        "      echo \"$TEST\": FAIL",
                        "      cat \"$RESULT\"",
                        "      RETURN=1",
                        "    else",
                        "      echo \"$TEST\": OK",
                        "    fi",
                        "  done",
                        "  rm \"$RESULT\"",
                        "  return $RETURN",
                        "}",
                        "cd /app/share/installed-tests/retro-gtk-0.14/",
                        "retro_test RetroCore libretro/libretro-dummy.so",
                        "retro_test retro-reftest `find . -name '*.reftest'`",
                        "cd /app/tests",
                        "retro_reftest_test `ls *.reftest`",
                        "exit $RETURN"
                    ],
                    "dest-filename" : "retro-unit-tests"
                },
                {
                    "type" : "file",
                    "path" : "org.gnome.Retro.UnitTests.desktop",
                    "dest-filename" : "org.gnome.Retro.UnitTests.desktop"
                }
            ]
        },
        {
            "name" : "retro-gtk",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
                "--libdir=lib",
                "-Dinstall-tests=true"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/retro-gtk.git"
                }
            ]
        }
    ]
}
